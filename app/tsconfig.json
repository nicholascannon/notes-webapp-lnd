{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "Bundler",
        "lib": ["dom", "dom.iterable", "esnext"],
        "jsx": "react-jsx",
        "jsxImportSource": "@emotion/react",
        "strict": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "paths": {
            "@/*": ["./src/*"]
        },
        "incremental": true,
        "types": ["vitest/globals"]
    },
    "include": ["./src"]
}
